<h1>This is the index page of the district systems.</h1>

<div class="container pt-3">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link <%= @tabs[:upload_link_control] %>" id="home-tab" data-toggle="tab" href="#upload" role="tab" aria-controls="home" aria-selected="true">Loadprofile
        Visualization</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= @tabs[:config_link_control] %>" id="profile-tab" data-toggle="tab" href="#config" role="tab" aria-controls="profile" aria-selected="false">DHC
        Simulation</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= @tabs[:result_link_control] %>" id="contact-tab" data-toggle="tab" href="#results" role="tab" aria-controls="contact" aria-selected="false">Results</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade <%= @tabs[:upload_tab_control] %>" id="upload" role="tabpanel" aria-labelledby="home-tab">
      <%= render 'upload_loadprofile_form' %>
    </div>
    <div class="tab-pane fade <%= @tabs[:config_tab_control] %>" id="config" role="tabpanel" aria-labelledby="profile-tab">
      <%= render 'dhc_system_config_form' %>
    </div>
    <div class="tab-pane fade <%= @tabs[:result_tab_control] %>" id="results" role="tabpanel" aria-labelledby="contact-tab">
      <%= render 'dhc_system_results_form' %>
    </div>
  </div>
  <br>
  <%= link_to 'Home', '/welcome/index' %>
</div>

